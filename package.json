{
  "name": "tut-ext",
  "displayName": "tut-ext",
  "description": "tutorial of how to make an extension",
  "version": "0.1.0",
  "icon": "task.png",
  "publisher": "panzerstadt",
  "repository": {
    "type": "git",
    "url": "https://github.com/panzerstadt/tut-vscode-ext-todo"
  },
  "engines": {
    "vscode": "^1.42.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "taskOutline",
          "name": "Task Runner"
        }
      ]
    },
    "commands": [
      {
        "command": "taskOutline.executeTask",
        "title": "Execute"
      },
      {
        "command": "taskOutline.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "taskOutline.refresh",
          "when": "view == taskOutline",
          "group": "navigation"
        }
      ]
    }
  },
  "keywords": [
    "tutorial",
    "tasks"
  ],
  "galleryBanner": {
    "color": "#F6F7EB"
  },
  "scripts": {
    "help": "echo 'login with vsce login panzerstadt', and paste your personal access token from azure orgs. then 'vsce publish'",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.1",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.42.0",
    "eslint": "^6.8.0",
    "@typescript-eslint/parser": "^2.18.0",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "glob": "^7.1.6",
    "mocha": "^10.2.0",
    "typescript": "^3.7.5",
    "vscode-test": "^1.3.0"
  }
}
